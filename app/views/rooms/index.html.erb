<div class="container">
<div class="container">
<div id="chatroom_container" class="row bg-light">
    <div id="side-bar mt-5" class="col-md-3">
        
        <h4>List Users</h4>
        <%= turbo_stream_from "users" %>
        <div id="users">
          <h6>  <%= render @users %> </h6>
        </div>
        <h4 class="mt-4">Room List</h4>
        <%= turbo_stream_from "rooms" %>
